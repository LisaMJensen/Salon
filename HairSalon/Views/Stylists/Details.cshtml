@{
  Layout = "_Layout";
}

@using SalonCatalog.Models;
@model SalonCatalog.Models.Stylist;


<h2>Stylist Details</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Name)</h3>
<br>
<h4>Client List</h4>
<ul>
  @foreach (var client in ViewBag.thisStylistsClients)
{
  <p>@client.Name</p>
}
</ul>
<br>


<p>@Html.ActionLink("Back to stylists", "Index")</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>


